---
const { href, thumbnail, project_name, gh_url, deploy_url, date, description, stack } = Astro.props;
import { arrayToFormattedStr } from "@utils/StringFormatters"
const formattedStr = arrayToFormattedStr(stack);
---

<a href={href} class="group relative block bg-block bg-gray-500 rounded-lg">
	<img
		class="absolute inset-0 h-full w-full object-cover opacity-75 md:transition-opacity md:group-hover:opacity-50
		rounded-lg"
		src={thumbnail}
	/>
	<div class="relative p-4 sm:p-4 lg:p-8">
		<p class="text-sm font-medium uppercase tracking-widest">
			{formattedStr}
		</p>
		<p class="text-xl font-bold text-white sm:text-2xl">{ project_name }</p>
		<div class="mt-32 sm:mt-48 lg:mt-64">
			<div
				class="md:translate-y-8 md:transform md:opacity-0 md:transition-all md:group-hover:translate-y-0 md:group-hover:opacity-100"
			>
				<p class="text-sm text-white">
					{description}
				</p>
			</div>
		</div>
	</div>
</a>
